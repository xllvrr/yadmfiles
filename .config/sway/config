# Sway configuration converted from nix
# Variables
set $mod Mod4
set $scriptsdir /home/xllvr/repos/scripts
set $primaryscreen DP-2
set $secondaryscreen DP-3

# Output configuration
output DP-2 mode 1920x1080 pos 0 0
output DP-3 mode 1680x1050 pos 1920 0
output "*" bg $HOME/.config/wallpaper/cow.png fill

# Input configuration
input "1390:268:ELECOM_TrackBall_Mouse_HUGE_TrackBall" {
    scroll_button 277
    scroll_button_lock enabled
    scroll_method on_button_down
}

# Keybindings
# Workspace switching and moving containers
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Focus and movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

bindsym $mod+Shift+h move workspace to output left
bindsym $mod+Shift+j move workspace to output down
bindsym $mod+Shift+k move workspace to output up
bindsym $mod+Shift+l move workspace to output right

# Application shortcuts
bindsym $mod+Return exec --no-startup-id kitty
bindsym Alt+space exec --no-startup-id fuzzel
bindsym $mod+Alt+f exec thunar
bindsym $mod+b exec firefox
bindsym $mod+e exec kitty --detach yazi

# System management
bindsym $mod+c kill
bindsym $mod+Alt+o exec systemctl poweroff
bindsym $mod+Alt+r exec systemctl reboot
bindsym $mod+Alt+s exec systemctl suspend

# Window management
bindsym $mod+a focus parent
bindsym $mod+f fullscreen toggle
bindsym $mod+z floating toggle
bindsym $mod+g split h
bindsym $mod+v split v
bindsym $mod+x layout toggle split
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed

# Sway management
bindsym $mod+Shift+r exec swaymsg reload
bindsym $mod+Ctrl+q exit

# Custom scripts
bindsym $mod+Alt+v exec $scriptsdir/fuzzclip
bindsym $mod+Shift+s exec $scriptsdir/fuzzshot

# Focus follows mouse
focus_follows_mouse yes

# Startup applications
exec_always mako

exec discord --enable-features=UseOzonePlatform --ozone-platform=wayland --enable-wayland-ime
exec firefox

exec syncthing

exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

exec bluetoothctl trust 28:D0:EA:94:0C:A9
exec bluetoothctl power on
exec bluetoothctl connect 28:D0:EA:94:0C:A9

exec fcitx5 -d --replace
exec fcitx5-remote -r

# Workspace back and forth
workspace_auto_back_and_forth yes

# Floating windows
for_window [class="nmtui"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class=".*mako.*"] floating enable
for_window [class=".*blueman.*"] floating enable
for_window [title="Steam - Update News"] floating enable

# Window appearance
default_border pixel 3
titlebar_border_thickness 0
titlebar_padding 0

client.focused #0AF532 #0AF532 #000000
client.focused_inactive #0D5C26 #0D5C26 #000000
client.unfocused #0D5C26 #0D5C26 #000000

# Workspace assignments
workspace 1 output $primaryscreen
workspace 7 output $primaryscreen
workspace 2 output $secondaryscreen
workspace 6 output $secondaryscreen

# Application assignments
assign [title="^Discord.*"] 1
assign [title="^Firefox$"] 2
assign [class="obsidian"] 6
assign [title="^musikcube$"] 7
assign [class="zathura"] 8

# Gaps
gaps inner 5
gaps outer 10

# Bar configuration
bar {
    position top
    swaybar_command waybar
}
